.container{
  dispaly: list-item;
}

.book-root{
  width: 100%;
  height: 650rpx;
  text-aligh: center;
  border: solid 1rpx #E5E5E5;
  border-radius: 10rpx;
  margin-top: 10rpx;
  margin-bottom: 20rpx;
}

.book-img-root{
  width: 100%;
  height: 45%;
  text-align: center;
}

.book-img-bg{
  width: 100%;
  height: 80%;
  border-top-left-radius: 10rpx;
  border-top-right-radius: 10rpx;
  background-size: cover;
}

.book-img{
  top: -180rpx;
  position: relative;
  z-index: 9999;
  width: 35%;
  height: 330rpx;
}

.book-title{
  font-size: 40rpx;
  font-weight: bold;
  width: 100%;
  margin-top: 130rpx;
  text-align: center;
}

.book-content{
  margin-top: 20rpx;
  text-indent: 2em;
  padding-left: 20rpx;
  padding-right: 20rpx;
  color: #ABABAB;
  font-size: 32rpx;
  margin-bottom: 30rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
}

.book-info-root{
  width: 100%;
  margin-top: 50rpx;
}

.book-info{
  width: 33%;
  float: left;
  text-align: center;
}

.book-info-icon{
  width: 45rpx;
  height: 45rpx;
  vertical-align: middle;
}

.book-info-content{
  display: inline;
  line-height: 45rpx;
  vertical-align: middle;
  color: #7D7D7D;
}